<div class="main-contents-name">Connection Glaph</div>

<div class="container">
  <form action='update' method='get' id="update-graph">
    <font size='4'>start date:</font><input type="datetime-local" name="start_date" step="1" value="<%= @start_date %>" required>
    &nbsp;
    <font size='4'>end date:</font><input type="datetime-local" name="end_date" step="1" value="<%= @end_date %>" required>
    &nbsp;
    <input type="submit" value="Update Glaph" class="btn btn-warning" id="make-glaph-button">
    <%= image_tag "ajax-loader.gif", :class=>"access-loader" %>
  </form>
</div>

<!-- connection count(line chart) -->
<div class="container">
  <div class="sub-contents-name">Connection count chart</div>
  <div class="col-xs-9">
    <div id="line-chart" style="width:100%;"></div>
  </div>
  <div class="col-xs-3">
    <div id="label-position"></div>
  </div>
</div>

<div class="spacer"></div>

<!-- connection source(pie glaph) -->
<div class="container">
  <div class="sub-contents-name">Connection source chart</div>
  <div class="col-xs-12">
    <div id="pie-chart"></div>
  </div>
</div>
